{layout 'products.latte'}

{block content}
<div class="container">
	<div class="row">
		<h1>Úprava {$product->name}</h1>
		<div class="col-md-6">
			*Aktuální obrázek, pokud nevyberete nový, nezmění se<br />
			<img src="{$basePath}/images/products/{$product->id}.{$product->img_ext}" title="aktuální obrázek"/>
		</div>
		<div class="col-md-6">
			{control productForm}
		</div>
	</div>
</div>
{/block}