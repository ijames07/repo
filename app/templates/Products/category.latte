{layout 'products.latte'}

{block content}
<div class="row">
{foreach $products as $product}
	<div class="product">
		<img src="{$basePath}/images/products/{$product->products_id . 'n.' . $product->ext}" /><br />
		<a n:href='Products:product, $product->products_id'>{$product->name}</a>
		<div class="description">
			{$product->description}
		</div>
		{$product->price |number:2:',':' '}
	</div>
{/foreach}
</div>
{/block}