{layout '../logged_in.latte'}

{block content}
<div class="container">
	<div class="row">
		<a href="{plink Categories:add}">PÅ™idat kategorii</a>
	</div>
	<div class="row">
		<ul>
		{foreach $categories as $category}
			<a href="{plink Products:categories, $category->name}"><li class="thumbnail"><h4>{$category->name}</h4></li></a>
			<a href="{plink Categories:edit, $category->id}">Upravit</a>
		{/foreach}
		</ul>
	{foreach $products as $product}
		<div class="product">
			<img src="{$basePath}/images/products/{$product->id . 'n.' . $product->img_ext}" /><br />
			<a n:href='Products:product, $product->id'>{$product->name}</a>
			<div class="description">
				{$product->description}
			</div>
			{$product->price |number:2:',':' '}
		</div>
	{/foreach}
	</div>
</div>
{/block}