{**
 * @param string   $basePath web base path
 * @param array    $flashes  flash messages
 *}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<title>{ifset #title}{include title|striptags} | {/ifset}Cat caf√©</title>
        <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/bootstrap.css" />
        <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/bootstrap-theme.css" />
        <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/custom.css" />
		<link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/toastr.css" />
        <script src="{$basePath}/js/respond.min.js"></script>
	<link rel="shortcut icon" href="{$basePath}/favicon.ico" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	{block head}{/block}
</head>

<body>
        <script> document.body.className+=' js' </script>
        <div class="row">
            <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="collapse">
                    <ul class="nav navbar-nav">
                        {include #header}
                    </ul>
                </div>
            </nav>
        </div>
        {include #content}
<!-- javascript -->
    <script src="{$basePath}/js/jquery-1.11.1.js"></script>
    <script src="{$basePath}/js/bootstrap.min.js"></script>
	<script src="{$basePath}/js/toastr.js"></script>
	<script>
		{foreach $flashes as $flash}
			{if $flash->type == 'info'}
				toastr.info({$flash->message});
			{elseif $flash->type == 'success'}
				toastr.success({$flash->message});
			{elseif $flash->type == 'error'}
				toastr.error({$flash->message});
			{else}
				toastr.warning({$flash->message});
			{/if}
		{/foreach}
	</script>
</body>
</html>
